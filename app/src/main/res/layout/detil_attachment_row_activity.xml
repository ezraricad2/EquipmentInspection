<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageContainer"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/list_selector"
    android:clickable="true">

    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/common_5_dp"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Item test text" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#c0c0c0" />

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/common_20_dp"
        app:srcCompat="@drawable/ic_delete_black"
        android:text="Delete"
        android:background="@drawable/image_blue_selector"
        android:tint="@color/icon_gray"
        android:clickable="true"
        android:layout_marginRight="@dimen/common_10_dp"
        android:layout_alignTop="@+id/btnDownload"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/btnDownload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/baseline_cloud_download_black_36"
        android:background="@drawable/image_blue_selector"
        android:tint="@color/icon_gray"
        android:clickable="true"
        android:text="Delete"
        android:layout_below="@+id/tvFileName"
        android:layout_toStartOf="@+id/btnDelete" />

</RelativeLayout>
