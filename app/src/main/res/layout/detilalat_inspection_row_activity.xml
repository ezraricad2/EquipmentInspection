<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="7dp"
    app:cardCornerRadius="7dp"
    >

<RelativeLayout
    android:id="@+id/messageContainer"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/list_selector"
    android:clickable="true">

    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/common_5_dp"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Item test text" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#c0c0c0" />

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/tvFileName"
        android:layout_below="@+id/tvFileName"
        android:layout_marginTop="@dimen/common_10_dp"
        android:background="@drawable/image_blue_selector"
        android:clickable="true"
        app:srcCompat="@drawable/ic_insert_comment_black_36dp" />

    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/ivComment"
        android:layout_marginLeft="@dimen/common_20_dp"
        android:layout_toEndOf="@+id/ivComment"
        android:background="@drawable/image_blue_selector"
        android:clickable="true"
        app:srcCompat="@drawable/ic_camera_alt_black_36dp" />

    <LinearLayout
        android:id="@+id/llThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvFileName"
        android:layout_marginLeft="@dimen/common_10_dp"
        android:layout_marginTop="@dimen/common_5_dp"
        android:layout_toEndOf="@+id/ivCamera"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Status" />

        <RadioGroup
            android:id="@+id/rgThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OK" />

            <RadioButton
                android:id="@+id/rbAdjust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ADJUST" />

            <RadioButton
                android:id="@+id/rbChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CHANGE" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvFileName"
        android:layout_marginLeft="@dimen/common_10_dp"
        android:layout_marginTop="@dimen/common_5_dp"
        android:layout_toEndOf="@+id/ivCamera"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Score" />

        <RadioGroup
            android:id="@+id/rgFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1" />

            <RadioButton
                android:id="@+id/rbS2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2" />

            <RadioButton
                android:id="@+id/rbS3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3" />

            <RadioButton
                android:id="@+id/rbS4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvFileName"
        android:layout_marginLeft="@dimen/common_10_dp"
        android:layout_marginTop="@dimen/common_5_dp"
        android:layout_toEndOf="@+id/ivCamera"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Status" />

        <RadioGroup
            android:id="@+id/rgTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PASS" />

            <RadioButton
                android:id="@+id/rbFail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FAIL" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_10_dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/ivCamera"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/ivCamera">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Status" />

        <Spinner
            android:id="@+id/spinnerAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>

</android.support.v7.widget.CardView>